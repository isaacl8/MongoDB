<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Message Board</title>
</head>

<body>
    <h1>Message Board</h1>
    <hr>
    <form action="/createmessage" method="post">
        <p>Name: <input type="text" name="name"></p>
        <p>Message:</p>
        <p><textarea name="message" rows="8" cols="80"></textarea></p>
        <input type="submit" name="submit" value="Post Message">
    </form>
    <!-- this will have a for loop to render the form above for quotes with hard code for the comment form -->

<% for (let i = 0; i < messages.length; i++) { %>
        <h4>Name: <%= messages[i].name %> </h4>
        <h4>Message: <%= messages[i].message %> </h4>

    <% for (let j = 0; j < messages[i].comment.length; j++) { %>
        <p>Name:<%= messages[i].comment[j].name %></p>
        <p>Comment:<%= messages[i].comment[j].comment %></p>
        <% } %>

        <form action="/comments/<%= messages[i]._id %>" method="post">
            <p>Name: <input type="text" name="name"></p>
            <p>Comment:</p>
            <p><textarea name="comment" rows="8" cols="80"></textarea></p>
            <input type="submit" name="submit" value="Post Comment">
        </form>
        <hr>
        <% } %>

</body>

</html>
